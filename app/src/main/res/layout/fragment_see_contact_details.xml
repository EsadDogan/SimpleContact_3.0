<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.SeeContactDetailsFragment"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txtUserIdDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="userId"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <pl.droidsonroids.gif.GifImageView
            android:layout_marginStart="2dp"
            android:layout_marginTop="30dp"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:src="@mipmap/hide2"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="-2dp"
            android:background="@color/darkThemeBackground">

        <ImageView
            android:id="@+id/imageDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:src="@mipmap/yoda"
            android:visibility="visible"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>







    <TextView
        android:id="@+id/txtNameSurnameDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_bold"
        android:maxLines="2"
        android:text="Name Surname"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="200dp"
        android:fontFamily="@font/comfortaa"
        android:text="General Informations"
        android:textSize="12sp"
        android:layout_marginStart="20dp" />

    <View
        android:id="@+id/view"
        style="@style/Divider"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:layout_marginTop="6dp"
         />

    <TextView
        android:id="@+id/txtAgeDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:fontFamily="@font/comfortaa"
        android:textSize="18sp"
        android:text="Age: "
        />

    <TextView
        android:id="@+id/txtMailDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:fontFamily="@font/comfortaa"
        android:textSize="18sp"
        android:text="Mail: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAgeDetail" />

    <TextView
        android:id="@+id/txtCountryDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:fontFamily="@font/comfortaa"
        android:textSize="18sp"
        android:text="Country: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMailDetail" />

    <TextView
        android:id="@+id/txtSexDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:fontFamily="@font/comfortaa"
        android:textSize="18sp"
        android:text="Gender: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCountryDetail" />


</androidx.appcompat.widget.LinearLayoutCompat>